@model SistemaEscolar.Models.Alumno
@{
    ViewData["Title"] = "Editar Alumno";
}

<h2>Editar Alumno</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="AlumnoId" />
    <div class="form-group">
        <label asp-for="NombreAlumno"></label>
        <input asp-for="NombreAlumno" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Direccion"></label>
        <input asp-for="Direccion" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Cedula"></label>
        <input asp-for="Cedula" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Telefono"></label>
        <input asp-for="Telefono" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Correo"></label>
        <input asp-for="Correo" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
</form>

<p>
    <a asp-action="Index" class="btn btn-secondary">Volver al Listado</a>
</p>

